<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/screen"
    tools:context="com.res_otomasyon.resotomasyon.MenuEkrani">

    <ExpandableListView
        android:id="@+id/expandableListViewMenuEkrani"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:transcriptMode="disabled"
        android:layout_above="@+id/buttonSepet">
    </ExpandableListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstylekoseli"
        android:textColor="@android:color/white"
        android:text="Sepete Git"
        android:id="@+id/buttonSepet"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstylekoseli"
        android:textColor="@android:color/white"
        android:text="Hemen BaÅŸla"
        android:id="@+id/buttonMasaAc"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/expandableListViewMenuEkrani"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:visibility="invisible"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="#ff0800ff"
        android:clickable="true"
        android:layout_above="@+id/buttonSepet" />

</RelativeLayout>
