<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.res_otomasyon.resotomasyon.HesapEkrani">
    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Seçilen Siparişleriniz"
            android:id="@+id/textSiparis" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textSiparis">

            <ListView android:id="@+id/listViewSecilenSiparisler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ListView>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:background="#AAAAAA"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hesabınız"
            android:id="@+id/textHesap" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textHesap">

            <ListView android:id="@+id/listViewHesap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ListView>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>